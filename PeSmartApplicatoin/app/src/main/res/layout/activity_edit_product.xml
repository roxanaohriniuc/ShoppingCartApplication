<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:activity="com.example.roxanaohriniuc.petmartsuper.ProductDescriptionActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eProductNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:editable="true"
        android:textColor="#000000"
        android:hint="Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eProductDescriptionTextView"
        android:layout_below="@+id/eProductNameTextView"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:editable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:hint="Product Description"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eUnitCostTextView"
        android:layout_below="@+id/eProductDescriptionTextView"
        android:clickable="false"
        android:editable="true"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:textColor="#000000"
        android:hint="Unit Cost"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eUnitPricetextView"
        android:layout_below="@+id/eUnitCostTextView"
        android:paddingTop="20dp"
        android:hint="Unit Price"
        android:editable="true"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eQuantityInStockTextView"
        android:layout_below="@+id/eUnitPricetextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:textColor="#000000"
        android:hint="Quantity In Stock"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eCategoryTextView"
        android:layout_below="@+id/eQuantityInStockTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:editable="true"
        android:paddingTop="20dp"
        android:textColor="#000000"
        android:hint="Category"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD Product"
        android:id="@+id/editORaddProductButton"
        android:textSize="20sp"
        android:layout_above="@+id/eReturnToInventoryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Inventory"
        android:id="@+id/eReturnToInventoryButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
